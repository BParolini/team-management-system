# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_size = 4
indent_style = space
insert_final_newline = true
end_of_line = lf
max_line_length = off
trim_trailing_whitespace = true

[*.{json, yaml, yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.properties]
charset = latin1
